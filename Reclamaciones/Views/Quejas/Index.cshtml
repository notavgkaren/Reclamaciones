@model IEnumerable<Reclamaciones.Models.MetodoEnvio>

@{
    ViewBag.Title = "Index";
}

<h2>Listado</h2>

<p>
    @Html.ActionLink("Crear", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Cliente
        </th>
        <th>
            Departamento
        </th>
        <th>
            Estado
        </th>
        <th>
            Opcion
        </th>
        <th>
            Fecha Inicio
        </th>
        <th>
            Hora
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Cliente.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Departamento.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.EstadoMetodoEnvio.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TipoMetodoOpcion.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FechaInicio)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HoraInicio)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
